{
  "manifest_version": 3,
  "name": "Custom selection",
  "author": "Pythack",
  "version": "1.5.5",
  "description": "Change the color, background color, and the text shadow of the text selection!",
  "background": {
    "service_worker": "./background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["injector.js"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "permissions": ["storage", "activeTab", "tabs", "notifications", "scripting"],
  "action": {
    "default_icon": "icon.png",
    "default_title": "Custom selection",
    "default_popup": "popup.html",
    "browser_style": true
  },
  "web_accessible_resources": [
    {
      "resources": [
        "./icon.png",
        "./iconcustom.png",
        "./iconvalid.png",
        "./iconfail.png",
        "./icondisabled.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
